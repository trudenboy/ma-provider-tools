{%- if locale == 'ru' -%}
site_name: Провайдер {{ display_name }} для Music Assistant
{%- else -%}
site_name: {{ display_name }} Provider for Music Assistant
{%- endif %}
site_url: https://{{ repo.split('/')[0] }}.github.io/{{ repo.split('/')[1] }}/
repo_url: https://github.com/{{ repo }}
repo_name: {{ repo }}
edit_uri: edit/{{ default_branch }}/docs/

theme:
  name: material
  language: {% if locale == 'ru' %}ru{% else %}en{% endif %}
  features:
    - navigation.tabs
    - navigation.sections
    - content.tabs.link

plugins:
  - search

markdown_extensions:
  - pymdownx.tabbed:
      alternate_style: true
  - pymdownx.superfences
  - admonition
  - tables
  - toc:
      permalink: true

nav:
  - Home: index.md
  - Configuration: configuration.md
{% if provider_type == 'music_provider' %}  - Known Issues: known-issues.md
{% endif %}  - Development:
      - Setup: development.md
      - Docker: dev-docker.md
      - Testing: testing.md
      - Contributing: contributing.md
      - Incident Management: incident-management.md
